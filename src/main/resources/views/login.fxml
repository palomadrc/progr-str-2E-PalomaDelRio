<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginjavafx.controllers.LoginController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="LOGIN" />

    <TextField fx:id="txtCorreo" prefHeight="11.0" prefWidth="560.0" promptText="Correo" />
    <PasswordField fx:id="txtPassword" promptText="Contraseña" />

    <Button onAction="#onLogin" text="Iniciar sesión" />

    <Label fx:id="lblError" textFill="red" />

</VBox>
